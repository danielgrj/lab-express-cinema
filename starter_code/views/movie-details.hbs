<div class="movie-container">
  <div><img src="{{movie.image}}" alt=""></div>
  <div>
    <a href="/movies">Go back</a>
    <h2>{{movie.title}}</h2>
    <p><b>Director: {{movie.director}}</b></p>
    <p><b>Stars</b></p>
    <ul>
      {{#each movie.stars as |star|}}
      <li>{{star}}</li>
      {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <p>
      {{#each movie.showtimes as |showtime|}}
      <span>{{showtime}}</span> |
      {{/each}}
    </p>
  </div>
</div>